@model IEnumerable<ReadyProject>

@{
    ViewData["Title"] = "портфолио проектов";
}

<section class="mt-5 pb-5">
    <div class="container-xl our-cases-block">
        <h3 class="header-section text-center text-lg-start">Наши кейсы</h3>
        @foreach (var item in Model)
        {
            <div class="wow bounceInUp case-item mt-5 pt-5 pb-5">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12 col-lg-6">
                            <div class="case-item__img">
                                <img src="~/img/Projects/Logo/@item.LogoImg" alt="imagesite">
                            </div>
                        </div>
                        <div class="col-12 col-lg-6">
                            <h5 class="mt-3 case-item__header">@item.Name</h5>
                            <div class="case-item__about mt-3">
                                @item.Description
                            </div>
                            <div class="case-item__watch-button mt-3 d-flex justify-content-lg-start justify-content-center">
                                <a class="btn p-3 w-50" asp-controller="Project" asp-action="Index" asp-route-id="@item.Id">Смотреть кейс</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<section class="wow bounceInUp form-questions">
    <div class="container">
        <div class="row">
            <h3 class="header-text text-center mt-3">Остались вопросы?</h3>
            <h5 class="mt-3 text-center">Оставьте заявку ниже и мы с вами обязательно свяжемся!</h5>
            <div class="container mt-3 mb-5">
                <div class="row">
                    <form action="/" method="post">
                        <div class="form-group">
                            <label for="name">Ваше имя:</label>
                            <input name="name" class="form-control" id="name" placeholder="Имя">
                        </div>
                        <div class="form-group mt-3">
                            <label for="email1">E-mail:</label>
                            <input type="email" name="email" class="form-control" id="email1" placeholder="Email">
                        </div>
                        <div class="form-group mt-3">
                            <label for="phone">Номер телефона:</label>
                            <input name="phone" class="form-control" id="phone" placeholder="Телефон">
                        </div>
                        <div class="form-group mt-3">
                            <label for="message">Сообщение:</label>
                            <textarea class="form-control" name="message" rows="5"></textarea>
                        </div>
                        <div class="form-check mt-3">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label text-muted" for="flexCheckDefault">
                                <a class="text-decoration-none" href="#" target="_blank">Согласен с политикой защиты данных</a>
                            </label>
                        </div>
                        <div class="d-flex justify-content-center mt-3">
                            <button type="submit" class="btn p-2 btn-primary">Отправить сообщение</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>