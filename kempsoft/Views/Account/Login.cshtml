@model kempsoft.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Авторизация";
}


<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-lg-6">
            <h2 class="mt-3">Авторизация</h2>
            <form class="mt-3" method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Email"></label><br />
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Password"></label><br />
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-check mt-3">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe">Запомнить меня</label><br />
                </div>
                <div class="form-group mt-3 mb-3">
                    <label class="form-check-label">Нет аккаунта? <a asp-controller="Account" asp-action="Register">зарегистрируйтесь</a></label>
                </div>
                <div class="mt-5 text-center">
                    <input class="btn btn-success" type="submit" value="Войти" />
                </div>
            </form>
        </div>
    </div>
</div>

