@model kempsoft.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

@section Css {
    @*<link href="~/css/reg.css" rel="stylesheet" asp-append-version="true" />*@
}


<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-lg-6">
            <h2 class="mt-3">Регистрация нового пользователя</h2>
            <form class="mt-3" id="app" method="post" asp-controller="Account" asp-action="Register">
                <div asp-validation-summary="ModelOnly"></div>
                @*<div class="form-group">
            <label asp-for="phone"></label><br />
            <input class="form-control" asp-for="phone" />
            <span asp-validation-for="phone"></span>
        </div>*@
                <div class="form-group">
                    <label asp-for="Email"></label><br />
                    <input class="form-control" asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Password"></label><br />
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="PasswordConfirm"></label><br />
                    <input class="form-control" asp-for="PasswordConfirm" />
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
                <div class="form-check mt-1 mb-1">
                    <input type="checkbox" class="form-check-input" id="exampleCheck2">
                    <label class="form-check-label" for="exampleCheck2">Я согласен с политикой <a target="_blank" asp-controller="Oferta" asp-action="PrivacyDataOferta">обработки персональных данных</a></label>
                </div>
                <div class="mt-5 text-center" v-bind:class="[isEnabledOfferta == true ? '' : 'disabled-block']">
                    <input class="btn btn-primary" type="submit" value="Зарегистрироваться" />
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @*<script src="~/scripts/runtime~Register.js" asp-append-version="true"></script>
    <script src="~/scripts/Register.js" asp-append-version="true"></script>*@

}